= render "homes/header"
= render "homes/purchasebtn"
- breadcrumb :card
= render "layouts/breadcrumbs"

.mypage-main
  = render "users/mypage-side-menu"
  .l-content
    .user-card__content
      %h2 支払い方法
      .user-card__content
        %h3 クレジットカード一覧
        .customer-card__content
          %figure.form_space
            = image_tag 'visa.svg', width: '26', height: '20'
          .customer-card__content--number.form_space
            = "**** **** **** " + @default_card_information.last4
          .customer-card__content--expired.form_space
            - exp_month = @default_card_information.exp_month.to_s
            - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
            %h3
            = exp_month + " / " + exp_year
          = form_tag(delete_card_index_path, method: :post, id: 'charge-form',  name: "inputForm") do
            %input{ type: "hidden", name: "card_id", value: "" }
            %button.delete__button 削除する
        .how__not__regist
          %span 支払い方法について