= render "homes/header"
= render "homes/purchasebtn"
.bread-crumbs
  %ul
    %li.itemscope
      = link_to "メルカリ", "#"
      %i.icon-arrow-right
        %li 
          >
    %li.last-childs
      = link_to "マイページ", "#"
      %i.icon-arrow-right
        %li 
          >
    %li.last-childs
      = link_to "支払い情報", "#"
      %i.icon-arrow-right
        %li 
          >
    %li.last-child
      クレジットカード情報入力
.mypage-main
  = render "users/mypage-side-menu"
  .l-content
    .l-chapter-container
      %h2.l-chapter-head
        クレジットカード情報入力
      = form_tag(pay_card_index_path, method: :post, id: 'charge-form',  name: "inputForm", class: 'l-single-inner') do
        .l-single-content
          .form-group
            %label カード番号
            %span.form-require 必須
            = text_field_tag "number", "", class: "number", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
            %ul.signup-card-list
              %li
                = image_tag 'visa.svg', size: "49x20", class: 'credit-card-icon'
              %li
                = image_tag 'master-card.svg', size: "34x20", class: 'credit-card-icon'
              %li
                = image_tag 'saison-card.svg', size: "30x20", class: 'credit-card-icon'
              %li
                = image_tag 'jcb.svg', size: "32x20", class: 'credit-card-icon'
              %li
                = image_tag 'american-express-straight.png', size: "20x20", class: 'credit-card-icon'
              %li
                = image_tag 'dinersclub.svg', size: "32x20", class: 'credit-card-icon'
              %li
                = image_tag 'discover.svg', size: "32x20", class: 'credit-card-icon'
          .signup-form-expire
            %label 有効期限
            %span.form-require 必須
            .input-box-six
              %select#exp_month{name: "exp_month", type: "text", class: 'select-default'}
                %option{value: "1"}01
                %option{value: "2"}02
                %option{value: "3"}03
                %option{value: "4"}04
                %option{value: "5"}05
                %option{value: "6"}06
                %option{value: "7"}07
                %option{value: "8"}08
                %option{value: "9"}09
                %option{value: "10"}10
                %option{value: "11"}11
                %option{value: "12"}12
              %span 月
              %select#exp_year{name: "exp_year", type: "text",  class: 'select-default'}
                %option{value: "2019"}19
                %option{value: "2020"}20
                %option{value: "2021"}21
                %option{value: "2022"}22
                %option{value: "2023"}23
                %option{value: "2024"}24
                %option{value: "2025"}25
                %option{value: "2026"}26
                %option{value: "2027"}27
                %option{value: "2028"}28
                %option{value: "2029"}29
              %span 年
        .form-group.ee
          %label セキュリティコード
          %span.form-require 必須
          = text_field_tag "cvc", "", class: "cvc", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc"
          .card__form__content--help.form_space
            %i.fas.fa-question-circle
            カード裏面の番号とは？
          #card_token
          = submit_tag "追加する", id: "token_submit", class: 'submit-btn'
